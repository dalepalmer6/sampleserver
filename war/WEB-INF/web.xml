<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee">

  <!-- Servlets -->
  <servlet>
    <servlet-name>greetServlet</servlet-name>
    <servlet-class>com.example.myproject.server.GreetingServiceImpl</servlet-class>
  </servlet>
  
  <servlet>
    <servlet-name>dataParser</servlet-name>
    <servlet-class>com.example.myproject.server.DataParseService</servlet-class>
  </servlet>
  
  <servlet>
    <servlet-name>dbQueryForm</servlet-name>
    <servlet-class>com.example.myproject.server.DBQueryFormServiceImpl</servlet-class>
  </servlet>
  
  <servlet>
    <servlet-name>tableRetrieve</servlet-name>
    <servlet-class>com.example.myproject.server.RetrieveTableNameService</servlet-class>
  </servlet>
  
  <servlet>
    <servlet-name>dataRetrieve</servlet-name>
    <servlet-class>com.example.myproject.server.RetrieveDataService</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>greetServlet</servlet-name>
    <url-pattern>/sampleserver/greet</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
 	 <servlet-name>dataParser</servlet-name>
    <url-pattern>/sampleserver/dataParser</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
 	 <servlet-name>dbQueryForm</servlet-name>
    <url-pattern>/sampleserver/dbQueryForm</url-pattern>
  </servlet-mapping>
  
   <servlet-mapping>
 	 <servlet-name>tableRetrieve</servlet-name>
    <url-pattern>/sampleserver/tableRetrieve</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
 	 <servlet-name>dataRetrieve</servlet-name>
    <url-pattern>/sampleserver/dataRetrieve</url-pattern>
  </servlet-mapping>
  
  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>SampleServer.html</welcome-file>
  </welcome-file-list>

</web-app>
